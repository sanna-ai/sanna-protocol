{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sanna.dev/schemas/receipt/v1.0.json",
  "title": "Sanna Reasoning Receipt",
  "description": "Schema for Sanna reasoning receipts v1.0 — artifacts that capture AI reasoning provenance, constitution enforcement, and consistency check results",
  "type": "object",
  "required": [
    "spec_version",
    "tool_version",
    "checks_version",
    "receipt_id",
    "receipt_fingerprint",
    "full_fingerprint",
    "correlation_id",
    "timestamp",
    "inputs",
    "outputs",
    "context_hash",
    "output_hash",
    "checks",
    "checks_passed",
    "checks_failed",
    "status"
  ],
  "properties": {
    "spec_version": {
      "type": "string",
      "description": "Specification version. See spec/sanna-specification-v1.0.md",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "examples": ["1.0"]
    },
    "tool_version": {
      "type": "string",
      "description": "Tool version that generated this receipt",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": ["0.13.0"]
    },
    "checks_version": {
      "type": "string",
      "description": "Version of check evaluation schema (increment when check semantics change)",
      "pattern": "^[0-9]+$",
      "examples": ["5"]
    },
    "receipt_id": {
      "type": "string",
      "description": "Unique identifier for this receipt instance (UUID v4)",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    },
    "receipt_fingerprint": {
      "type": "string",
      "description": "Truncated 16-hex SHA-256 fingerprint (human-readable). Same content produces same fingerprint across runs.",
      "pattern": "^[a-f0-9]{16}$"
    },
    "full_fingerprint": {
      "type": "string",
      "description": "Full 64-hex SHA-256 fingerprint (programmatic verification)",
      "pattern": "^[a-f0-9]{64}$"
    },
    "correlation_id": {
      "type": "string",
      "description": "Correlation identifier with path prefix (sanna-, mcp-, gw-)",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when receipt was generated",
      "format": "date-time"
    },
    "inputs": {
      "type": "object",
      "description": "Inputs to the AI system for this trace",
      "properties": {
        "query": {
          "description": "User query or prompt",
          "oneOf": [
            {"type": ["string", "null"]},
            {"$ref": "#/$defs/RedactionMarker"}
          ]
        },
        "context": {
          "description": "Retrieved context provided to the model",
          "oneOf": [
            {"type": ["string", "null"]},
            {"$ref": "#/$defs/RedactionMarker"}
          ]
        }
      },
      "additionalProperties": true
    },
    "outputs": {
      "type": "object",
      "description": "Outputs from the AI system",
      "properties": {
        "response": {
          "description": "Final answer/response from the model",
          "oneOf": [
            {"type": ["string", "null"]},
            {"$ref": "#/$defs/RedactionMarker"}
          ]
        }
      },
      "additionalProperties": true
    },
    "context_hash": {
      "type": "string",
      "description": "Full 64-hex SHA-256 of Sanna Canonical JSON of inputs",
      "pattern": "^[a-f0-9]{64}$"
    },
    "output_hash": {
      "type": "string",
      "description": "Full 64-hex SHA-256 of Sanna Canonical JSON of outputs",
      "pattern": "^[a-f0-9]{64}$"
    },
    "checks": {
      "type": "array",
      "description": "Results of consistency checks driven by constitution invariants",
      "items": {
        "$ref": "#/$defs/CheckResult"
      }
    },
    "checks_passed": {
      "type": "integer",
      "description": "Number of checks that passed",
      "minimum": 0
    },
    "checks_failed": {
      "type": "integer",
      "description": "Number of checks that failed",
      "minimum": 0
    },
    "status": {
      "type": "string",
      "description": "Overall status derived from check results",
      "enum": ["PASS", "WARN", "FAIL", "PARTIAL"]
    },
    "evaluation_coverage": {
      "type": ["object", "null"],
      "description": "Coverage metrics for invariant evaluation",
      "properties": {
        "total_invariants": {
          "type": "integer",
          "description": "Total number of invariants in the constitution",
          "minimum": 0
        },
        "evaluated": {
          "type": "integer",
          "description": "Number of invariants with built-in checks",
          "minimum": 0
        },
        "not_checked": {
          "type": "integer",
          "description": "Number of invariants without evaluators (NOT_CHECKED)",
          "minimum": 0
        },
        "coverage_basis_points": {
          "type": "integer",
          "description": "Proportion of invariants evaluated, in basis points (0-10000, where 10000 = 100%)",
          "minimum": 0,
          "maximum": 10000
        }
      },
      "additionalProperties": false
    },
    "constitution_ref": {
      "type": ["object", "null"],
      "description": "Provenance of the constitution/policy document that defined check boundaries",
      "required": ["document_id", "policy_hash"],
      "properties": {
        "document_id": {
          "type": "string",
          "description": "Identifier for the constitution document (e.g., 'agent-name/0.1.0')",
          "minLength": 1
        },
        "policy_hash": {
          "type": "string",
          "description": "SHA-256 hash of the constitution policy content (16 or 64 hex chars)",
          "pattern": "^[a-f0-9]{16}([a-f0-9]{48})?$"
        },
        "version": {
          "type": ["string", "null"],
          "description": "Version of the constitution document"
        },
        "source": {
          "type": ["string", "null"],
          "description": "Where the constitution was loaded from"
        },
        "approved_by": {
          "oneOf": [
            {"type": "array", "items": {"type": "string"}, "minItems": 1},
            {"type": "string", "minLength": 1},
            {"type": "null"}
          ],
          "description": "Email(s) of constitution approver(s)"
        },
        "approval_date": {"type": ["string", "null"]},
        "approval_method": {"type": ["string", "null"]},
        "signature": {"type": ["string", "null"]},
        "key_id": {"type": ["string", "null"], "pattern": "^[a-f0-9]{64}$"},
        "signed_by": {"type": ["string", "null"]},
        "signed_at": {"type": ["string", "null"]},
        "scheme": {"type": ["string", "null"], "enum": ["constitution_sig_v1", null]},
        "signature_verified": {
          "description": "Whether the constitution signature was verified at receipt generation time",
          "oneOf": [
            {"type": "boolean"},
            {"type": "string", "enum": ["no_signature"]},
            {"type": "null"}
          ]
        },
        "constitution_approval": {
          "description": "Approval status from the constitution's approval chain",
          "oneOf": [
            {
              "type": "object",
              "description": "Full approval record when constitution is approved",
              "properties": {
                "status": {"type": "string", "enum": ["approved", "pending", "revoked"]},
                "approver_id": {"type": "string"},
                "approver_role": {"type": "string"},
                "approved_at": {"type": "string"},
                "constitution_version": {"type": "string"},
                "content_hash": {"type": "string", "pattern": "^[a-f0-9]{64}$"}
              },
              "required": ["status", "approver_id", "approver_role", "approved_at", "constitution_version", "content_hash"],
              "additionalProperties": false
            },
            {
              "type": "object",
              "description": "Minimal record when constitution is unapproved",
              "properties": {
                "status": {"type": "string", "enum": ["unapproved"]}
              },
              "required": ["status"],
              "additionalProperties": false
            },
            {"type": "null"}
          ]
        }
      },
      "additionalProperties": false
    },
    "enforcement": {
      "type": ["object", "null"],
      "description": "Enforcement outcome for this receipt. Present when a constitution is loaded.",
      "required": ["action", "reason", "failed_checks", "enforcement_mode", "timestamp"],
      "properties": {
        "action": {
          "type": "string",
          "description": "Enforcement outcome",
          "enum": ["halted", "warned", "allowed", "escalated"]
        },
        "reason": {
          "type": "string",
          "description": "Human-readable reason for the enforcement action"
        },
        "failed_checks": {
          "type": "array",
          "description": "Check IDs that triggered the enforcement",
          "items": {"type": "string"}
        },
        "enforcement_mode": {
          "type": "string",
          "description": "The configured enforcement level",
          "enum": ["halt", "warn", "log"]
        },
        "timestamp": {
          "type": "string",
          "description": "ISO 8601 timestamp",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "receipt_signature": {
      "type": ["object", "null"],
      "description": "Ed25519 cryptographic signature of the receipt",
      "properties": {
        "signature": {"type": "string"},
        "key_id": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
        "signed_by": {"type": "string"},
        "signed_at": {"type": "string"},
        "scheme": {"type": "string", "enum": ["receipt_sig_v1"]}
      },
      "additionalProperties": false
    },
    "authority_decisions": {
      "type": ["array", "null"],
      "description": "Authority boundary enforcement decisions",
      "items": {"$ref": "#/$defs/AuthorityDecisionRecord"}
    },
    "escalation_events": {
      "type": ["array", "null"],
      "description": "Escalation events triggered by authority boundary enforcement",
      "items": {"$ref": "#/$defs/EscalationEventRecord"}
    },
    "source_trust_evaluations": {
      "type": ["array", "null"],
      "description": "Trust tier evaluations for data sources",
      "items": {"$ref": "#/$defs/SourceTrustRecord"}
    },
    "input_hash": {
      "type": ["string", "null"],
      "description": "Receipt Triad: SHA-256 of action context at governance boundary",
      "pattern": "^[a-f0-9]{64}$"
    },
    "reasoning_hash": {
      "type": ["string", "null"],
      "description": "Receipt Triad: SHA-256 of agent justification",
      "pattern": "^[a-f0-9]{64}$"
    },
    "action_hash": {
      "type": ["string", "null"],
      "description": "Receipt Triad: SHA-256 of tool call and arguments",
      "pattern": "^[a-f0-9]{64}$"
    },
    "assurance": {
      "type": ["string", "null"],
      "description": "Receipt Triad assurance level. MUST be present when any triad hash is present.",
      "enum": ["full", "partial", null]
    },
    "redacted_fields": {
      "type": ["array", "null"],
      "description": "JSON paths of fields replaced with redaction markers (SEC-1). Present only when PII redaction is enabled.",
      "items": {
        "type": "string",
        "description": "JSON path of a redacted field, e.g. 'inputs.context'"
      }
    },
    "extensions": {
      "type": "object",
      "description": "Reverse-domain-namespaced vendor metadata. Verifiers MUST ignore unknown extensions.",
      "additionalProperties": true
    },
    "identity_verification": {
      "description": "Identity claim verification results. Present only when constitution has identity_claims.",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "total_claims": {"type": "integer", "minimum": 0},
            "verified": {"type": "integer", "minimum": 0},
            "failed": {"type": "integer", "minimum": 0},
            "unverified": {"type": "integer", "minimum": 0},
            "all_verified": {"type": "boolean"},
            "claims": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "provider": {"type": "string"},
                  "claim_type": {"type": "string"},
                  "credential_id": {"type": "string"},
                  "status": {"type": "string", "enum": ["verified", "unverified", "failed", "expired", "no_key"]}
                },
                "required": ["provider", "claim_type", "credential_id", "status"]
              }
            }
          },
          "required": ["total_claims", "verified", "failed", "unverified", "all_verified", "claims"]
        },
        {"type": "null"}
      ]
    }
  },
  "additionalProperties": false,
  "$defs": {
    "CheckResult": {
      "type": "object",
      "description": "Result of a single coherence check",
      "required": ["check_id", "name", "passed", "severity"],
      "properties": {
        "check_id": {
          "type": "string",
          "description": "Check identifier (sanna.* for standard, INV_* for custom, C1-C5 legacy)",
          "pattern": "^(C[1-5]|INV_.+|sanna\\..+)$"
        },
        "name": {
          "type": "string",
          "description": "Human-readable check name",
          "minLength": 1
        },
        "passed": {
          "type": "boolean",
          "description": "Whether the check passed"
        },
        "severity": {
          "type": "string",
          "description": "Severity level if check fails",
          "enum": ["info", "warning", "critical", "high", "medium", "low"]
        },
        "evidence": {
          "type": ["string", "null"],
          "description": "Evidence for failure (snippets from context/output)"
        },
        "details": {
          "type": ["string", "null"],
          "description": "Additional details about check result"
        },
        "triggered_by": {
          "type": ["string", "null"],
          "description": "Invariant ID that triggered this check"
        },
        "enforcement_level": {
          "type": ["string", "null"],
          "description": "Enforcement level from constitution invariant",
          "enum": ["halt", "warn", "log", null]
        },
        "constitution_version": {
          "type": ["string", "null"],
          "description": "Constitution schema version when this check was configured"
        },
        "status": {
          "type": ["string", "null"],
          "description": "Check status: NOT_CHECKED, ERRORED, or FAILED",
          "enum": ["NOT_CHECKED", "ERRORED", "FAILED", null]
        },
        "reason": {
          "type": ["string", "null"],
          "description": "Explanation of status"
        },
        "check_impl": {
          "type": ["string", "null"],
          "description": "Namespaced check implementation ID (e.g., 'sanna.context_contradiction')"
        },
        "replayable": {
          "type": ["boolean", "null"],
          "description": "Whether this check is deterministically replayable"
        }
      },
      "additionalProperties": false
    },
    "AuthorityDecisionRecord": {
      "type": "object",
      "description": "Record of an authority boundary enforcement decision",
      "required": ["action", "decision", "reason", "boundary_type", "timestamp"],
      "properties": {
        "action": {"type": "string"},
        "params": {"type": "object", "additionalProperties": true},
        "decision": {"type": "string", "enum": ["halt", "allow", "escalate"]},
        "reason": {"type": "string"},
        "boundary_type": {"type": "string", "enum": ["cannot_execute", "must_escalate", "can_execute", "uncategorized"]},
        "escalation_target": {
          "type": ["object", "null"],
          "properties": {"type": {"type": "string", "enum": ["log", "webhook", "callback"]}},
          "additionalProperties": false
        },
        "timestamp": {"type": "string", "format": "date-time"}
      },
      "additionalProperties": false
    },
    "EscalationEventRecord": {
      "type": "object",
      "description": "Record of an escalation event execution",
      "required": ["action", "condition", "target_type", "success", "timestamp"],
      "properties": {
        "action": {"type": "string"},
        "condition": {"type": "string"},
        "target_type": {"type": "string", "enum": ["log", "webhook", "callback"]},
        "success": {"type": "boolean"},
        "details": {"type": ["object", "null"], "additionalProperties": true},
        "timestamp": {"type": "string", "format": "date-time"}
      },
      "additionalProperties": false
    },
    "SourceTrustRecord": {
      "type": "object",
      "description": "Trust tier evaluation for a data source",
      "required": ["source_name", "trust_tier", "evaluated_at"],
      "properties": {
        "source_name": {"type": "string"},
        "trust_tier": {"type": "string", "enum": ["tier_1", "tier_2", "tier_3", "untrusted", "unclassified"]},
        "evaluated_at": {"type": "string", "format": "date-time"},
        "verification_flag": {"type": ["boolean", "null"]},
        "context_used": {"type": ["boolean", "null"]}
      },
      "additionalProperties": false
    },
    "RedactionMarker": {
      "type": "object",
      "description": "Deterministic redaction marker (SEC-1). Replaces sensitive field values before signing so that the receipt signature covers the marker, not the original PII.",
      "required": ["__redacted__", "original_hash"],
      "properties": {
        "__redacted__": {
          "type": "boolean",
          "const": true,
          "description": "Sentinel flag — always true"
        },
        "original_hash": {
          "type": "string",
          "description": "SHA-256 hex digest of the original field value (UTF-8 encoded)",
          "pattern": "^[a-f0-9]{64}$"
        }
      },
      "additionalProperties": false
    }
  }
}
